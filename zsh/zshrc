# 1. ENVIRONMENT VARIABLES
# Add Postgres to PATH (Keep this at the top)
export PATH="/opt/homebrew/opt/postgresql@17/bin:$PATH"

# Set Oh My Zsh path
export ZSH="$HOME/.oh-my-zsh"

# 2. THEME & PLUGINS
# These MUST be defined BEFORE 'source $ZSH/oh-my-zsh.sh'
ZSH_THEME="robbyrussell"

# Combine your plugins into one single list
plugins=(
  git 
  zsh-autosuggestions 
  zsh-syntax-highlighting
)

# 3. INITIALIZE OH MY ZSH
source $ZSH/oh-my-zsh.sh

# 4. COMPLETION & SUGGESTIONS CONFIG
# These can stay at the bottom
ZSH_AUTOSUGGEST_STRATEGY=(history completion)

# Initialize the completion system
autoload -Uz compinit && compinit

# Allow menu selection with arrow keys during Tab completion
zstyle ':completion:*' menu select
